@model TangOrganizer.Model.Models.Attivita

@{
  ViewBag.Title = "Nuova milonga";
}

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>@ViewBag.Title</h2>
    <ol class="breadcrumb">
      <li>
        @Html.ActionLink("Evento", "Edit", "Evento", new { id = Model.EventoId })
      </li>
      <li class="active">
        <strong>@ViewBag.Title</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      @Html.ActionLink("Evento", "Edit", "Evento", new { id = Model.EventoId }, new { @class = "btn btn-primary" })
    </div>
  </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>@ViewBag.Title</h5>
        </div>
        <div class="ibox-content">

          @using (Html.BeginForm("Create", "Attivita", FormMethod.Post))
          {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
              @Html.ValidationSummary(true)

              @Html.HiddenFor(model => model.Tipo)
              @Html.HiddenFor(model => model.EventoId)

              <div class="form-group">
                <label class="control-label col-md-2">Tema lezione</label>
                <div class="col-md-10">
                  @Html.EditorFor(model => model.Nome)
                  @Html.ValidationMessageFor(model => model.Nome)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.Maestri, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  @Html.EditorFor(model => model.Maestri)
                  @Html.ValidationMessageFor(model => model.Maestri)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.Descrizione, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  @Html.EditorFor(model => model.Descrizione)
                  @Html.ValidationMessageFor(model => model.Descrizione)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.DataInizio, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  @Html.EditorFor(model => model.DataInizio)
                  @Html.ValidationMessageFor(model => model.DataInizio)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.DataFine, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  @Html.EditorFor(model => model.DataFine)
                  @Html.ValidationMessageFor(model => model.DataFine)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.Luogo, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  @Html.EditorFor(model => model.Luogo)
                  @Html.ValidationMessageFor(model => model.Luogo)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.LimiteIscrizioni, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  @Html.EditorFor(model => model.LimiteIscrizioni)
                  @Html.ValidationMessageFor(model => model.LimiteIscrizioni)
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                  <input type="submit" value="Salva" class="btn btn-primary" />
                  @Html.ActionLink("Annulla", "Edit", "Evento", new { id = Model.EventoId }, new { @class = "btn btn-white" })
                </div>
              </div>
            </div>
          }

        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
