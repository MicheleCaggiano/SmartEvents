@model TangOrganizer.Model.Models.Pacchetto

@{
  ViewBag.Title = "Modifica pacchetto";
}

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>@ViewBag.Title</h2>
    <ol class="breadcrumb">
      <li>
        @Html.ActionLink("Evento", "Edit", "Evento", new { id = Model.EventoId })
      </li>
      <li class="active">
        <strong>@ViewBag.Title</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      @Html.ActionLink("Evento", "Edit", "Evento", new { id = Model.EventoId }, new { @class = "btn btn-primary" })
    </div>
  </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>@ViewBag.Title</h5>
        </div>
        <div class="ibox-content">

          @using (Html.BeginForm())
          {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

              @Html.ValidationSummary(true)
              @Html.HiddenFor(model => model.Id)

              <div class="form-group">
                @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  @Html.EditorFor(model => model.Nome)
                  @Html.ValidationMessageFor(model => model.Nome)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.Descrizione, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  @Html.EditorFor(model => model.Descrizione)
                  @Html.ValidationMessageFor(model => model.Descrizione)
                </div>
              </div>

              <div class="form-group">
                @Html.LabelFor(model => model.Prezzo, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                  @Html.EditorFor(model => model.Prezzo)
                  @Html.ValidationMessageFor(model => model.Prezzo)
                </div>
              </div>


              <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                  <input type="submit" value="Salva" class="btn btn-primary" />
                  @Html.ActionLink("Annulla", "Edit", "Evento", new { id = Model.EventoId }, new { @class = "btn btn-white" })
                </div>
              </div>
            </div>
          }


        </div>
      </div>
    </div>
  </div>
</div>



@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
